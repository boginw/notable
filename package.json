{
  "name": "notable",
  "productName": "Notable",
  "description": "A minimal markdown application",
  "version": "0.0.5",
  "author": "Bogi Wennerstr√∏m <bogi.wennerstrom@gmail.com>",
  "homepage": "https://notable.ink",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "ink.notable.notable",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start --env=development",
    "test": "gulp test --env=test && electron-mocha app/specs.js.autogenerated --renderer --require ts-node/register",
    "tester": "electron-mocha app/specs.js.autogenerated --renderer --require ts-node/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "@types/simplemde": "^1.11.7",
    "assert": "^1.4.1",
    "async": "^2.5.0",
    "codemirror-widgets": "^1.4.2",
    "download-npm-package": "^3.1.11",
    "fs-jetpack": "^0.10.2",
    "gulp-eslint": "^4.0.0",
    "install": "^0.10.1",
    "material-icons": "^0.1.0",
    "node-watch": "^0.5.5",
    "npm": "^5.0.3",
    "npm-run": "^4.1.2",
    "plus.merge-text": "0.0.3",
    "run-sequence": "^2.2.1",
    "simplemde": "^1.11.2",
    "superagent": "^3.5.2",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/codemirror": "0.0.40",
    "@types/electron": "^1.4.33",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.7",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.0.0",
    "electron": "^11.5.0",
    "electron-builder": "^8.6.0",
    "electron-mocha": "^3.0.0",
    "electron-packager": "^8.5.1",
    "electron-prebuilt": "^1.4.13",
    "electron-winstaller": "^2.5.2",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-tslint": "^8.1.1",
    "gulp-typescript": "^3.1.5",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "minimist": "^1.2.0",
    "mocha": "^3.4.2",
    "png-to-ico": "^1.0.6",
    "rollup": "^0.36.3",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.2",
    "spectron": "^3.3.0",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "webdriverio": "^4.8.0"
  },
  "plugins": {
    "notable-editor-katex": "^0.0.3",
    "notable-editor-images": "^0.0.1"
  }
}
